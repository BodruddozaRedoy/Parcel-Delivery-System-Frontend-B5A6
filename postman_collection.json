    {
      "name": "Parcel Management",
      "item": [
        {
          "name": "Create Parcel (Sender)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"Electronics\",\n  \"weight\": 2.5,\n  \"fee\": 15.00,\n  \"receiver\": \"{{receiver_id}}\",\n  \"fromAddress\": \"123 Main St, City, State 12345\",\n  \"toAddress\": \"456 Oak Ave, Town, State 67890\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/parcels/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "parcels", ""]
            }
          }
        },
        {
          "name": "Get My Parcels (Sender)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/parcels/my-parcels",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "parcels", "my-parcels"]
            }
          }
        },
        {
          "name": "Get Incoming Parcels (Receiver)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/parcels/incoming",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "parcels", "incoming"]
            }
          }
        },
        {
          "name": "Track Parcel (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/parcels/track/{{tracking_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "parcels", "track", "{{tracking_id}}"]
            }
          }
        },
        {
          "name": "Cancel Parcel (Sender)",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/parcels/cancel/{{parcel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "parcels", "cancel", "{{parcel_id}}"]
            }
          }
        },
        {
          "name": "Confirm Delivery (Receiver)",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/parcels/confirm/{{parcel_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "parcels", "confirm", "{{parcel_id}}"]
            }
          }
        }
      ]
    },
